		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@tanstack/react-table": "^8.21.3",
		"@vercel/otel": "1.13.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cmdk": "^1.1.1",
		"date-fns": "^4.1.0",
		"embla-carousel-react": "^8.6.0",
		"input-otp": "^1.4.2",
		"lucide-react": "^0.522.0",
		"negotiator": "1.0.0",
		"next": "15.3.4",
		"next-themes": "^0.4.6",
