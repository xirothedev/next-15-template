	"version": "1.0.0-canary",
	"private": true,
	"author": "xirothedev lethanhtrung.trungle@gmail.com",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/xirothedev/next-15-template.git"
	},
	"homepage": "https://github.com/xirothedev/next-15-template#readme",
	"bugs": {
		"url": "https://github.com/xirothedev/next-15-template/issues"
	},
	"keywords": [
		"next-15",
		"template",
		"shadcn",
		"storybook"
	],
	"scripts": {
		"dev": "next dev --turbo",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"format": "biome format --write .",
    "typecheck": "tsc --noEmit",
		"prepare": "husky",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"dependencies": {
		"@formatjs/intl-localematcher": "0.6.1",
		"@next/third-parties": "15.3.4",
		"@opentelemetry/api": "1.9.0",
