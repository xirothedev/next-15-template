  },
  "overrides": {
    "react-is": "^19.0.0-rc-69d4b800-20241021"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx --no -- commitlint --edit $1",
      "pre-commit": "npx --no -- lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome lint --write .",
      "git add ."
    ],
    "*.{json,css,html,md}": [
      "biome format --write .",
      "git add ."
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
